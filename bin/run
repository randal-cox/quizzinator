##!/usr/bin/env bash

# This is what we run for the paper

# Figure out
# - Do the small models do a lot of stupid behavior?
# - Does the LLM know who it is based on the matched demographics?
# - Can the small models replicate humans, or do we need the big model?

##############################################################################
# The human data set
#   - the whole thing (the baseline for all comparisons) or
#   - a sample (a )control for similarity metrics)
##############################################################################
#echo "Running whole human data"
#./bin/experiment \
#  --from_hints \
#  --verbose \
#  --experiment Humans_all \
#  --n 0 \
#  data/echo_one
#
## A sample the same size as the otehr experiments
#echo "Running partial human data"
#./bin/experiment \
#  --from_hints \
#  --verbose \
#  --experiment Humans_66 \
#  --n 66 \
#  data/echo_one

##############################################################################
# echo
#   we tell the LLM how to answer Roles/Gender and then we ask the LLM
#     what the Role/Gender is.
#   We also look at two questions that in humans are responsive to Role
#   This also runs through all four model sizes
##############################################################################
for e in  Roles Gender
do
  for m in 1.5 7 32 70
  do
    echo
    echo "Running ${e} echo for deepseek model ${m}B"
    ./bin/experiment \
      --hints ${e} \
      --verbose  \
      --experiment ${e}_${m}B \
      --model deepseek-r1:${m}B \
      --timeout 600 \
      --attempts 2 \
      --n 66 \
      --questions PuPSafeword,RRSafeword,${e} \
      data/echo
    #echo "time ./bin/experiment -hints ${e} --verbose  --experiment matched_${e}_${m}B --model deepseek-r1:${m}B --timeout 600  --attempts 2 --n 66 --questions PuPSafeword,RRSafeword,${e} data/echo"
  done
done
